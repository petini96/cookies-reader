{
  "manifest_version": 3,
  "name": "Integrador MSQD->IMO",
  "version": "2.4.0",
  "description": "Sincroniza dados do msqualifica.ms.gov.br para o IMO",
  "permissions": [
    "cookies",
    "scripting",
    "activeTab",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [ "logs.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
